# startup
exec --no-startup-id xsettingsd                                # fix ugly fonts
exec --no-startup-id compton --config ~/.config/compton/config # enable transparency
exec --no-startup-id lxpolkit                                  # start lxde polkit for drive mounting
exec --no-startup-id nm-applet                                 # enable wifi manager
exec --no-startup-id dunst -conf ~/.config/dunst/dunstrc       # start notification daemon
exec --no-startup-id desktop-dimmer                            # poor man's f.lux

# wallpaper
bindsym $mod+n exec --no-startup-id ~/.config/i3/scripts/setbgutc
bindsym $alt+n exec --no-startup-id ~/.config/i3/scripts/setbgutc
exec --no-startup-id feh --bg-fill ~/.wallpaper
exec --no-startup-id sleep 0.1 ; feh --bg-fill ~/.wallpaper
