! font
URxvt.font: xft:Inconsolata NF:size=13, xft:Symbola:size=13
!URxvt.font: xft:Inconsolata NF:size=13
URxvt.boldFont: xft:Inconsolata NF:style=Bold:size=13
URxvt.italicFont: xft:Inconsolata NF:style=Italic:size=13
URxvt.boldItalicFont: xft:Inconsolata NF:style=Bold Italic:size=13

! resize font
URxvt.perl-ext-common: default,matcher,resize-font,url-select,keyboard-select
URxvt.resize-font.smaller:  C-j
URxvt.resize-font.bigger:   C-k
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.url-select.underline: true

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! disable scrollbar
URxvt.scrollBar: false

! background color
URxvt*background: black
URxvt*foreground: gray

! transparent background
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/D6D8

! black
*.color0: #263640
*.color8: #4a697d

! red
*.color1: #d12f2c
*.color9: #fa3935

